<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:id="@+id/ll_flags_acivity">

    <LinearLayout
        android:id="@+id/ll_topbar"
        android:layout_alignParentTop="true"
        android:background="#ffc107"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="22dp"
            android:layout_gravity="center"
            android:id="@+id/back"
            android:src="@drawable/back"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:gravity="center"
            android:text="FLAG"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btn_addFlag"
            android:layout_marginRight="12dp"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/editlight"/>
    </LinearLayout>


    <com.example.tufengyi.manlife.view.CustomSwipeRefreshLayout

        android:layout_below="@id/ll_topbar"
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/flags_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.example.tufengyi.manlife.view.CustomSwipeRefreshLayout>



</RelativeLayout>

    <View
        android:visibility="gone"
        android:id="@+id/darkback"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>