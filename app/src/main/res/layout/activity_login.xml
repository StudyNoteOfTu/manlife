<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="#f2b600"
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <RelativeLayout
        android:id="@+id/rl_login"
        android:visibility="gone"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logback">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:src="@drawable/manman144"
        android:layout_width="88dp"
        android:layout_height="88dp" />



    <RelativeLayout
        android:id="@+id/btn_log"
        android:background="@drawable/edit_back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="147dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="199dp"
        android:layout_height="55dp"
        android:elevation="4dp"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/wechat"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:textSize="19sp"
            android:textColor="#09bb07"
            android:text="微信登录"/>
        </LinearLayout>


    </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_loading"
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#000000"
        android:alpha="0.6">

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="174dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/toast_back">

            <ImageView
                android:src="@drawable/ok"
                android:id="@+id/img_toast"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="43dp"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_marginLeft="33dp"
                android:layout_marginRight="21dp"
                android:text="登录成功"
                android:layout_marginBottom="10dp"
                android:id="@+id/tv_toast"
                android:layout_width="120dp"
                android:layout_height="41dp"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_greet"
        android:background="#ffffff"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_marginTop="88dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/morning"
            android:layout_width="226dp"
            android:layout_height="226dp" />


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="41dp"
            android:layout_marginBottom="125dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/hi"
                    android:text="Hi "
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_name"
                    android:textStyle="bold"
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:text="Twelve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:text="，"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:id="@+id/tv_era"
                    android:text="日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:text="安。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:text="今天是"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:id="@+id/tv_date"
                    android:text="11月11日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#ffc107"
                    android:textSize="18sp"
                    android:text="，"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:textColor="#ffc107"
                android:textSize="18sp"
                android:text="很高兴陪在你身边。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>





</RelativeLayout>